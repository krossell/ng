{
	"extends": [
		"eslint:recommended"
	],
	"rules": {
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			2,
			"single"
		],
		//		"linebreak-style": [
		//			2,
		//			"unix"
		//		],
		"semi": [
			2,
			"always"
		]
	},
	"env": {
		"es6": true,
		"browser": true,
		"jasmine": true,
		"mocha": true,
		"amd": true,
		"node": true
	},
	"globals" : {
		"chai"       : false,
		"describe"   : false,
		"it"         : false,
		"before"     : false,
		"beforeEach" : false,
		"after"      : false,
		"afterEach"  : false
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	}
}